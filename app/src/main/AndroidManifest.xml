<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.agungfir.android">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-feature android:name="android.hardware.camera.flash" />

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Android">
        <activity
            android:name=".flashlight.FlashLightActivity"
            android:exported="true" />
        <activity
            android:name=".factsapp.FactAppActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".radiobutton.RadioButtonActivity"
            android:exported="true" />
        <activity
            android:name=".bottomsheet.MaterialBottomSheetActivity"
            android:exported="true" />
        <activity
            android:name=".viewpager.ZoomAnimationViewPagerActivity"
            android:exported="true" />
        <activity
            android:name=".listview.ListViewActivity"
            android:exported="true" />
        <activity
            android:name=".landcapevariant.LandscapeVariantActivity"
            android:exported="true" />
        <activity
            android:name=".gridlayout.GridLayoutActivity"
            android:exported="true" />
        <activity
            android:name=".imageview.ImageViewActivity"
            android:exported="true" />
        <activity
            android:name=".countdown.CountDownActivity"
            android:exported="true" />
        <activity
            android:name=".runnable.RunnableActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".viewmodel.ViewModelAppActivity"
            android:exported="true" />
    </application>

</manifest>